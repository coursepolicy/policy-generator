{
  "name": "lambdas",
  "version": "1.0.0",
  "description": "Lambdas belonging to course-policy-ai",
  "main": "index.js",
  "author": "cjtantay",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc --build --verbose",
    "invoke:hook": "yarn build && sls invoke local -f postPolicyWebhook",
    "deploy:hook": "yarn build && sls deploy -f postPolicyWebhook",
    "debug:hook": "yarn deploy:hook && sls dev -f postPolicyWebhook --verbose",
    "invoke:getPolicy": "yarn build && sls invoke local -f getPolicy",
    "deploy:getPolicy": "yarn build && sls deploy -f getPolicy",
    "debug:getPolicy": "yarn deploy:getPolicy && sls dev -f getPolicy --verbose",
    "invoke:updatePolicy": "yarn build && sls invoke local -f updatePolicy",
    "deploy:updatePolicy": "yarn build && sls deploy -f updatePolicy",
    "debug:updatePolicy": "yarn deploy:updatePolicy && sls dev -f updatePolicy --verbose",
    "invoke:pdf": "yarn build && sls invoke local -f getGeneratedPdf",
    "deploy:pdf": "yarn build && sls deploy -f getGeneratedPdf",
    "debug:pdf": "yarn deploy:pdf && sls dev -f getGeneratedPdf --verbose",
    "dev": "yarn build && sls offline",
    "deploy": "yarn build && sls deploy",
    "test": "jest"
  },
  "devDependencies": {
    "@sparticuz/chromium": "116",

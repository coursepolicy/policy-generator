    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "serverless": "^3.34.0",
    "serverless-offline": "^12.0.4",
    "serverless-plugin-utils": "^0.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig": "*",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@middy/core": "^4.5.5",
    "@middy/error-logger": "^4.5.5",
    "@middy/http-cors": "^4.6.0",
